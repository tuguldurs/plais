{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(levelname)8s - %(module)15s.%(funcName)15s:%(lineno)4d ::: %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple"
        }
    },

    "root": {
        "level": "INFO",
        "handlers": ["console"]
    }
}